<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_postdetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="5dp"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이조이 수원동탄에서 6/10(토) 봉사자 구합니다"
                android:textSize="24sp"
                android:padding="8dp"
                android:textColor="#000000"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="서울시 강동구"
                android:textSize="16sp"
                android:textColor="#666666"
                android:padding="8dp"
                android:background="@color/white"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#999999"
                    android:text="날짜"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2023.06.10(토)"
                    android:textColor="#000000"
                    android:padding="16dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#999999"
                    android:text="시간"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10시 30분 ~ 16시 0분"
                    android:textColor="#000000"
                    android:padding="16dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="모집조건"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/tv_Condition"
                    android:padding="16dp"
                    android:background="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="만 19세 이상"
                    android:textSize="16sp"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#999999"
                    android:text="모집 인원"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_employees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12명"
                    android:textColor="#000000"
                    android:padding="16dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#999999"
                    android:text="연락처"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="031-724-2124"
                    android:textColor="#000000"
                    android:padding="16dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#999999"
                    android:text="장소"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이조이 수원동탄점"
                    android:textColor="#000000"
                    android:padding="16dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="30dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상세 내용"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이조이 요양보호소는 여러가지 피치못한 사정으로, 키우던 반려동물을 보호할 수 없을 때 새로운 주인으로서 아이를 양육하며 극진하게 보호해 주는 프리미엄 요양보호센터입니다."
                android:textSize="14sp"
                android:textColor="#000000"
                android:padding="8dp"
                android:background="@color/white"
                />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0080ff"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="채팅하기" />

</LinearLayout>

